<?xml version="1.0" encoding="UTF-8" ?>
  <widget xmlns = "http://www.w3.org/ns/widgets"

       xmlns:gap   = "http://phonegap.com/ns/1.0"
       xmlns:android ="http://schemas.android.com/apk/res/android"
       id          = "com.net.happy"
       version     = "2.1.37"
       android-versionCode = "2210"
       >

  <name>NetHappy</name>
  <preference name="phonegap-version" value="cli-6.3.0" />

  <!--<preference name="phonegap-version" value="4.0.0" /> -->

  <description>NetHappy</description>

  <author href="http://yoursite.com" email="you@youremail.com">Your Name</author>

  <gap:plugin name="pushwoosh-pgb-plugin" source="npm" /><!--Pushwoosh plugin-->
  <access origin="*"/> <!-- allow all pages, use for development -->
  <access origin="*.pushwoosh.com"/> <!-- allow pushwoosh service -->
  <access origin="velocity.apple-dev.co.uk"/>
  <access origin="*.phonegap.com"/> <!-- allow phonegap service -->

  <!-- enable features -->
  <feature name="http://api.phonegap.com/1.0/network" />
  <!-- <feature name="http://api.phonegap.com/1.0/camera" /> -->
  <feature name="http://api.phonegap.com/1.0/notification" />
  <!-- <feature name="http://api.phonegap.com/1.0/geolocation" />
  <feature name="http://api.phonegap.com/1.0/media" />
  <feature name="http://api.phonegap.com/1.0/contacts" />
  <feature name="http://api.phonegap.com/1.0/file" />
  <feature name="http://api.phonegap.com/1.0/battery" /> -->
  <feature name="http://api.phonegap.com/1.0/device" />

  <platform name="ios" >
    <preference name="orientation" value="portrait" /><!--force portrait orientation-->
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="android-build-tool" value="gradle" />
  </platform>

  <platform name="android" >
    <preference name="orientation" value="portrait" /><!--force portrait orientation-->
    <preference name="android-build-tool" value="gradle" /><!--Android build gradle-->
  </platform>

  <preference name="DisallowOverscroll" value="true" /><!--disable overflow to stop window bounce-->

  <gap:plugin name="cordova-plugin-dialogs" source="npm" /><!--Internal notifications -->
  <gap:plugin name="cordova-plugin-network-information" source="npm" /><!-- Celluar info (offline//online) -->
  <gap:plugin name="cordova-plugin-whitelist" source="npm" /><!-- needed for Android Whitelisting -->
  <gap:plugin name="cordova-plugin-x-socialsharing" source="npm" /><!-- Social Sharing -->
  <!-- <gap:plugin name="de.appplant.cordova.plugin.badge" source="npm" /> -->
  <gap:plugin name="org.apache.cordova.device" source="npm" />
  <gap:plugin name="cordova-plugin-calendar"  source="npm" /><!-- Publish events to device calender -->
  <gap:plugin name="cordova-plugin-inappbrowser" source="npm" /><!-- inapp browser -->
  <!-- <gap:plugin name="com.phonegap.plugin.statusbar" source="npm" /> -->



  <icon src="icon/icon-36-ldpi.png"         gap:platform="android"  gap:qualifier="ldpi"/>
  <icon src="icon/icon-48-mdpi.png"         gap:platform="android"  gap:qualifier="mdpi"/>
  <icon src="icon/icon-72-hdpi.png"         gap:platform="android"  gap:qualifier="hdpi"/>
  <icon src="icon/icon-96-xhdpi.png"        gap:platform="android"  gap:qualifier="xhdpi"/>

  <icon src="Icon.png"                      gap:platform="ios" width="57" height="57"/>
  <icon src="icons/ios/icon-2x.png"         gap:platform="ios" width="114" height="114"/>
  <icon src="icons/ios/icon-40-2x.png"      gap:platform="ios" width="80" height="80"/>
  <icon src="icons/ios/icon-40.png"         gap:platform="ios" width="40" height="40"/>
  <icon src="icons/ios/icon-50-2x.png"      gap:platform="ios" width="100" height="100"/>
  <icon src="icons/ios/icon-50.png"         gap:platform="ios" width="50" height="50"/>
  <icon src="icons/ios/icon-60-2x.png"      gap:platform="ios" width="120" height="120"/>
  <icon src="icons/ios/icon-60-3x.png"      gap:platform="ios" width="180" height="180"/>
  <icon src="icons/ios/icon-60.png"         gap:platform="ios" width="120" height="120"/>
  <icon src="icons/ios/icon-72-2x.png"      gap:platform="ios" width="144" height="144"/>
  <icon src="icons/ios/icon-72.png"         gap:platform="ios" width="72" height="72"/>
  <icon src="icons/ios/icon-152.png"        gap:platform="ios" width="152" height="152"/>
  <icon src="icons/ios/icon-76.png"         gap:platform="ios" width="76" height="76"/>
