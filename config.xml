  <icon src="icons/ios/icon-small.png"      gap:platform="ios" width="29" height="29"/>

  <gap:splash src="screen/screen-ldpi-portrait.png"   gap:platform="android"  gap:qualifier="port-ldpi" />
  <gap:splash src="screen/screen-mdpi-portrait.png"   gap:platform="android"  gap:qualifier="port-mdpi" />
  <gap:splash src="screen/screen-hdpi-portrait.png"   gap:platform="android"  gap:qualifier="port-hdpi" />
  <gap:splash src="screen/screen-xhdpi-portrait.png"  gap:platform="android"  gap:qualifier="port-xhdpi" />

